{% extends 'base.html.twig' %}

{% block title %}New Patient{% endblock %}

{% block body %}
    <h1>Ajouter un Nouveau Patient </h1>

    <div class="container">
        <div class="card">
            <div class="modal-content">
                <div class="card-header">
                    <h4 class="card-title">Ajouter une image</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_row(form.prenom) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_row(form.nom) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_row(form.adresse) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            {{ form_row(form.cni) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_row(form.dateNaiss) }}
                        </div><div class="form-group col-md-4">
                            {{ form_row(form.telephone) }}
                        </div>
                    </div>
                    {{ form_widget(form) }}
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">Enregistrer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
