<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Formulaire Ordenance</h5>
                    </div>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="medicament"> Séléctionner des Médicaments</label>
                                <select class="custom-select" name="medicament[]" id="medicament" multiple>
                                    <option>liste des médicament dans le site</option>
                                </select>
                            </div>
                            <div class="col-md-6 mt-4">
                                <label for="newMedicament">Ajouter Médicament</label>
                                <input name="newMedicament" id="newMedicament" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Formulaire Visite</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content" style="">
                        <div class="row">
                            <div class=" col-md-5 ">
                                <label> prochaine rendez vous</label>
                                {{ form_row(form.rv) }}
                            </div>
                            <div class=" col-md-5 ">
                                <label> note de la visite</label>
                                {{ form_row(form.note) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary pull-right">Enregistrer</button>
        </div>
        {{ form_end(form) }}
    </div>

</div>



